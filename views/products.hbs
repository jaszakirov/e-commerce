<h1>{{title}}</h1>
<a href="/products/add" class="btn btn-success btn-sm" style="margin-right: 15px;">Create</a>
{{#if products}}
<div class="products">
  {{#each products}}
   <div class="card" style="width: 18rem;">
    <img src="{{productImg}}" class="card_img" alt="..."  >
    <div class="card-body">
     <div class="card_info">
       <h5><a href="">{{categoryName}}</a></h5>
      <h4 class="card-title">{{productName}}</h4>
      <p class="card-text">{{aboutProduct}}</p>
      <p class="card-price">{{price}}</p>
     </div>
      <a href="/products/edit/{{id}}" class="btn btn-primary">Edit product</a>
      <a href="/products/delete/{{id}}" class="btn btn-danger">Delete product</a>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h2>Products aren`t add</h2>
{{/if}}